@model IEnumerable<UrbanSystem.Web.ViewModels.Projects.ProjectIndexViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-center mb-0">Projects</h1>
            <a href="@Url.Action("Add", "Project")" class="btn btn-success">Add Project</a>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var project in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(project.ImageUrl))
                        {
                            <img src="@project.ImageUrl" class="card-img-top" alt="Image for @project.Name" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@project.Name</h5>
                            <p class="card-text">
                                <strong>Description:</strong> @project.Description
                            </p>
                            <p class="card-text">
                                <strong>Created On:</strong> @project.CreatedOn.ToString("yyyy-MM-dd")
                            </p>
                            <p class="card-text">
                                <strong>Status:</strong> @(project.IsCompleted ? "Completed" : "In Progress")
                            </p>
                            @if (!string.IsNullOrEmpty(project.LocationName))
                            {
                                <p class="card-text">
                                    <strong>Location:</strong> @project.LocationName
                                </p>
                            }
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="Details" asp-controller="Project" asp-route-id="@project.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
