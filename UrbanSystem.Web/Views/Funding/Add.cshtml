@model UrbanSystem.Web.ViewModels.Funding.FundingFormViewModel

@{
    ViewData["Title"] = "Add Funding";
}

<h1>Add Funding</h1>

<form asp-action="Add" asp-controller="Funding" method="post">
    <input type="hidden" asp-for="ProjectId" />
    <div class="form-group">
        <label asp-for="Amount">Funding Amount</label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsConfirmed" type="checkbox" />
        <label asp-for="IsConfirmed">I confirm this funding amount</label>
        <span asp-validation-for="IsConfirmed" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-3">Contribute</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}