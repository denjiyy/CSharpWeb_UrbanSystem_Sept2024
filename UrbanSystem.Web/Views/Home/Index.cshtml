@{
    ViewData["Title"] = "Welcome to UrbanWebSystem";
}

<div class="bg-white">
    <div class="position-relative px-4 pt-5 px-md-5 px-lg-8">
        <div class="position-absolute top-0 start-0 end-0 d-none d-sm-block" style="z-index: -1; height: 480px; background: linear-gradient(to right, rgba(59, 130, 246, 0.3), rgba(30, 64, 175, 0.3)); filter: blur(64px); clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%);"></div>
        <div class="container">
            <div class="row justify-content-center py-5 py-md-8">
                <div class="col-12 col-md-10 col-lg-8 text-center">
                    <h1 class="display-4 fw-bold mb-4">@ViewData["Title"]</h1>
                    <p class="lead mb-5">@ViewData["Message"]</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="Suggestion/Add" class="btn btn-primary px-4 py-2">Make a Suggestion</a>
                        <a href="Suggestion/All" class="btn btn-outline-secondary px-4 py-2">Join the Discussion <span aria-hidden="true">→</span></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="position-absolute bottom-0 start-0 end-0 d-none d-sm-block" style="z-index: -1; height: 480px; background: linear-gradient(to right, rgba(59, 130, 246, 0.3), rgba(30, 64, 175, 0.3)); filter: blur(64px); clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%);"></div>
    </div>
</div>

<div class="bg-white py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-12 col-md-10 col-lg-8 text-center">
