@model IEnumerable<UrbanSystem.Web.ViewModels.Meetings.MeetingIndexViewModel>

<div class="container mt-5">
    <h1 class="text-center mb-4">Meeting Management</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Title</th>
                <th>Scheduled Date</th>
                <th>Duration</th>
                <th>Location</th>
                <th>Attendees</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meeting in Model)
            {
                <tr>
                    <td>@meeting.Title</td>
                    <td>@meeting.ScheduledDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@meeting.Duration.ToString(@"hh\:mm")</td>
                    <td>@meeting.CityName</td>
                    <td>@meeting.AttendeesCount</td>
                    <td>
                        <a asp-action="Details" asp-controller="MeetingManagement" asp-area="Admin" asp-route-id="@meeting.Id" class="btn btn-info btn-sm">Details</a>

                        <a asp-action="Edit" asp-controller="MeetingManagement" asp-area="Admin" asp-route-id="@meeting.Id" class="btn btn-primary btn-sm">Edit</a>

                        <form method="post" asp-action="Delete" asp-controller="MeetingManagement" asp-area="Admin" class="d-inline">
                            <input type="hidden" name="id" value="@meeting.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this meeting?');">Delete</button>
                        </form>

                        @if (meeting.IsCurrentUserOrganizer)
                        {
                            <a asp-action="ManageAttendees" asp-controller="MeetingManagement" asp-area="Admin" asp-route-id="@meeting.Id" class="btn btn-secondary btn-sm mt-2">Manage Attendees</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Create" asp-controller="MeetingManagement" asp-area="Admin" class="btn btn-success">Create New Meeting</a>
    </div>
</div>